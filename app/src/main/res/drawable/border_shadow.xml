<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <item android:top="5dp" android:left="5dp">
                <shape>
                    <corners android:radius="5dp" />
                   <solid android:color="@color/black_alpha" />
                </shape>
            </item>
            <item android:bottom="4dp" android:right="4dp" >
                <shape>
                    <gradient android:angle="315"
                        android:endColor="@color/gris" android:startColor="#CCCACACA" />
                    <stroke
                        android:width="2dp"
                        android:color="@color/lightGreen" />
                    <padding
                        android:left="4dp"
                        android:top="4dp"
                        android:right="4dp"
                        android:bottom="4dp" />
                    <corners
                        android:bottomRightRadius="5dp"
                        android:bottomLeftRadius="5dp"
                        android:topLeftRadius="5dp"
                        android:topRightRadius="5dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="true">
        <layer-list>
            <item android:top="5dp" android:left="5dp">
                <shape>
                     <solid
                         android:color="@color/gris"/>
                    <stroke
                        android:width="2dp"
                        android:color="@color/lightGreen" />
                    <padding
                        android:left="4dp"
                        android:top="4dp"
                        android:right="4dp"
                        android:bottom="4dp" />
                    <corners
                        android:bottomRightRadius="5dp"
                        android:bottomLeftRadius="5dp"
                        android:topLeftRadius="5dp"
                        android:topRightRadius="5dp"/>
                </shape>
            </item>
        </layer-list>
    </item>


</selector>